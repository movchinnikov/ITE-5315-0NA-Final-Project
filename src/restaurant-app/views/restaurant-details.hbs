{{#if restaurant}}
<div class="action-buttons">
    <button class="btn-link btn-secondary btn-back">
        <i class="fas fa-arrow-left"></i> Back to List
    </button>
</div>

<div class="restaurant-details-card">
    <!-- Header -->
    {{> restaurant-header}}
    
    <!-- Main Image -->
    {{> restaurant-image}}
    
    <!-- Body -->
    <div class="restaurant-body">
        <div class="info-sections-grid">
            <!-- Location -->
            {{> restaurant-location}}
            
            <!-- Restaurant Info -->
            {{> restaurant-info}}
        </div>
        
        <!-- Grades History -->
        {{> restaurant-grades}}
    </div>
    
    <!-- Footer -->
    <div class="restaurant-footer">
        <!-- Map -->
        {{> restaurant-map}}
    </div>
</div>

<!-- Comments Section -->
<div class="comments-section">
    <div class="comments-header">
        <h2><i class="fas fa-comments"></i> Comments</h2>
    </div>

    <!-- Existing Comments -->
    {{> comments-list}}
    
    <!-- Add Comment Form -->
    {{> comment-form}}
</div>

<!-- Delete Confirmation Modal -->
{{> delete-modal}}

{{else}}
    {{> not-found}}
{{/if}}