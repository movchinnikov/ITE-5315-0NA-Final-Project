{{#if restaurant}}
<div class="action-buttons">
    <button class="btn-link btn-secondary btn-back">
        <i class="fas fa-arrow-left"></i> Back to List
    </button>
</div>
<div class="restaurant-details-card">
    <!-- Header -->
    <div class="restaurant-header">
        <div class="restaurant-title">
            <h1 class="restaurant-name">{{restaurant.name}}</h1>
            <div class="restaurant-meta">
                <span class="cuisine-badge large">{{restaurant.cuisine}}</span>
                <span class="borough-badge">{{restaurant.borough}}</span>
            </div>
        </div>
        <div class="restaurant-rating">
            <div class="grade-display">
                <span class="grade-label">Latest Grade</span>
                <span class="grade-value grade-{{restaurant.latestGrade}}">{{restaurant.latestGrade}}</span>
            </div>
            <div class="score-display">
                <span class="score-label">Score</span>
                <span class="score-value">{{restaurant.latestScore}}/100</span>
            </div>
        </div>
    </div>
    
    <!-- Body -->
    <div class="restaurant-body">
        <div class="info-sections-grid">
            <!-- Location Section -->
            <div class="info-section location-section">
                <div class="section-header">
                    <i class="fas fa-map-marker-alt"></i>
                    <h3>Location</h3>
                </div>
                <div class="section-content">
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-road"></i> Address</span>
                        <span class="info-value">{{restaurant.address.street}}, {{restaurant.address.building}}</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-city"></i> Borough</span>
                        <span class="info-value">{{restaurant.borough}}</span>
                    </div>
                    {{#if restaurant.address.zipcode}}
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-mail-bulk"></i> ZIP Code</span>
                        <span class="info-value">{{restaurant.address.zipcode}}</span>
                    </div>
                    {{/if}}
                </div>
            </div>
            
            <!-- Restaurant Info Section -->
            <div class="info-section restaurant-info-section">
                <div class="section-header">
                    <i class="fas fa-info-circle"></i>
                    <h3>Restaurant Information</h3>
                </div>
                <div class="section-content">
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-utensils"></i> Cuisine</span>
                        <span class="info-value cuisine-text">{{restaurant.cuisine}}</span>
                    </div>
                    {{#if restaurant.latestInspectionDate}}
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-calendar-check"></i> Last Inspection</span>
                        <span class="info-value">{{formatDate restaurant.latestInspectionDate}}</span>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
        
        <!-- Grades History -->
        {{#if restaurant.grades.length}}
        <div class="grades-history-section">
            <div class="section-header">
                <i class="fas fa-history"></i>
                <h3>Inspection History</h3>
            </div>
            <div class="grades-table-container">
                <table class="grades-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-calendar"></i> Date</th>
                            <th><i class="fas fa-grade"></i> Grade</th>
                            <th><i class="fas fa-chart-bar"></i> Score</th>
                            <th><i class="fas fa-tag"></i> Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each restaurant.grades}}
                        <tr>
                            <td>{{formatDate this.date}}</td>
                            <td>
                                <span class="grade-badge grade-{{this.grade}}">
                                    {{this.grade}}
                                </span>
                            </td>
                            <td>
                                <div class="score-bar">
                                    <div class="score-bar-fill" style="width: {{this.score}}%"></div>
                                    <span class="score-text">{{this.score}}/100</span>
                                </div>
                            </td>
                            <td>{{this.grade_type}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{/if}}
    </div>
    
    <!-- Footer -->
    <div class="restaurant-footer">
        
        <!-- Map Section -->
        {{#if restaurant.address.coord}}
        <div class="map-section">
            <div class="section-header">
                <i class="fas fa-map-marked-alt"></i>
                <h3>Location Map</h3>
            </div>
            
            <div class="restaurant-map">
                <iframe 
                    width="100%" 
                    height="300" 
                    frameborder="0" 
                    scrolling="no" 
                    marginheight="0" 
                    marginwidth="0"
                    src="https://www.openstreetmap.org/export/embed.html?bbox={{restaurant.address.coord.[0]}}%2C{{restaurant.address.coord.[1]}}%2C{{restaurant.address.coord.[0]}}%2C{{restaurant.address.coord.[1]}}&layer=mapnik&marker={{restaurant.address.coord.[1]}}%2C{{restaurant.address.coord.[0]}}"
                    style="border: 1px solid #ccc; border-radius: 8px;">
                </iframe>
            
                <br/>
                <small>
                    <a class="btn-link btn-secondary" href="https://www.openstreetmap.org/?mlat={{restaurant.address.coord.[1]}}&amp;mlon={{restaurant.address.coord.[0]}}#map=17/{{restaurant.address.coord.[1]}}/{{restaurant.address.coord.[0]}}"
                    target="_blank" rel="noopener">
                        View Larger Map
                    </a>
                </small>
            </div>
            
            <div class="coordinates">
                <span class="coord-label">Coordinates:</span>
                <span class="coord-value">{{restaurant.address.coord.[1]}}, {{restaurant.address.coord.[0]}}</span>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!-- Comments Section -->
<div class="comments-section">
    <div class="comments-header">
        <h2><i class="fas fa-comments"></i> Comments</h2>
    </div>

    <!-- Existing Comments -->
    <div id="comments-container" class="comments-list">
        
        {{#if restaurant.comments}}
            {{#if restaurant.comments.length}}
                {{#each restaurant.comments}}
                    <div class="comment-card" data-comment-id="{{this._id}}" data-user-id="{{this.user_id}}">
                        <div class="comment-header">
                            <span class="comment-author">
                                <i class="fas fa-user"></i> {{this.username}}
                            </span>
                            
                            <div class="comment-rating">
                                {{stars this.rating}}
                            </div>

                            <!-- Action buttons (only for comment owner) -->
                            {{#if (equals this.user_id @root.userId)}}
                            <div class="comment-actions">
                                <button class="btn-icon btn-edit-comment" title="Edit comment">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn-icon btn-delete-comment" title="Delete comment">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                            {{/if}}
                        </div>

                        <div class="comment-body">
                            <p class="comment-text">{{this.text}}</p>
                        </div>

                        <div class="comment-footer">
                            <span class="comment-date">
                                {{formatDate this.created_at}}
                            </span>
                        </div>
                    </div>
                {{/each}}

            {{else}}
                <div class="no-results">
                    <p>No comments yet. Be the first to comment!</p>
                </div>
            {{/if}}

        {{else}}
            <div class="no-results">
                <p>No comments yet. Be the first to comment!</p>
            </div>

        {{/if}}
    </div>

    <!-- Add Comment Form -->
    <div class="add-comment-form">
        <h3>Add Your Comment</h3>
        <form id="comment-form">
            <div class="rating-input">
                <label>Your Rating:</label>
                <div class="stars-input">
                    <button type="button" class="star-btn" data-rating="1"><i class="fas fa-star"></i></button>
                    <button type="button" class="star-btn" data-rating="2"><i class="fas fa-star"></i></button>
                    <button type="button" class="star-btn" data-rating="3"><i class="fas fa-star"></i></button>
                    <button type="button" class="star-btn" data-rating="4"><i class="fas fa-star"></i></button>
                    <button type="button" class="star-btn" data-rating="5"><i class="fas fa-star"></i></button>
                </div>
                <input type="hidden" id="comment-rating" name="rating" value="0">
            </div>
            
            <div class="form-group">
                <label for="comment-text">Your Comment:</label>
                <textarea id="comment-text" name="text" 
                    placeholder="Share your experience..." 
                    minlength="10" 
                    maxlength="1000" 
                    required></textarea>
            </div>

            <div class="form-actions">
                <button type="submit" id="submit-comment" class="btn btn-primary">
                    Submit Comment
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal for delete confirmation -->
<div id="delete-comment-modal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h3><i class="fas fa-exclamation-triangle"></i> Delete Comment</h3>
            <span class="close-modal">&times;</span>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this comment?</p>
            <p class="warning-text">This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button id="confirm-delete" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </button>
            <button id="cancel-delete" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </button>
        </div>
    </div>
</div>

{{else}}
    {{> no-found}}
{{/if}}