<div id="rating-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Rate Restaurant</h3>
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <form id="rating-form">
                <input type="hidden" id="rating-restaurant-id" name="restaurant_id">
                
                <div class="form-group">
                    <label for="rating-username">Your Name</label>
                    <input type="text" id="rating-username" name="username" 
                           required placeholder="Enter your name" maxlength="50">
                </div>
                
                <div class="form-group">
                    <label for="rating-score">Your Rating (0-100)</label>
                    <div class="score-input-container">
                        <input type="range" id="rating-score" name="score" min="0" max="100" 
                               value="50" class="score-slider">
                        <div class="score-display">
                            <span id="score-value">50</span>/100
                        </div>
                    </div>
                    <div class="score-labels">
                        <span>0 - Poor</span>
                        <span>100 - Excellent</span>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn-primary">Submit Rating</button>
                    <button type="button" class="btn-secondary" id="cancel-rating">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>