{{#if restaurant.address.coord}}
<div class="map-section">
    <div class="section-header">
        <i class="fas fa-map-marked-alt"></i>
        <h3>Location Map</h3>
    </div>
    
    <div class="restaurant-map">
        <iframe 
            width="100%" 
            height="300" 
            frameborder="0" 
            scrolling="no" 
            marginheight="0" 
            marginwidth="0"
            src="https://www.openstreetmap.org/export/embed.html?bbox={{restaurant.address.coord.[0]}}%2C{{restaurant.address.coord.[1]}}%2C{{restaurant.address.coord.[0]}}%2C{{restaurant.address.coord.[1]}}&layer=mapnik&marker={{restaurant.address.coord.[1]}}%2C{{restaurant.address.coord.[0]}}"
            style="border: 1px solid #ccc; border-radius: 8px;">
        </iframe>
    
        <br/>
        <small>
            <a class="btn-link btn-secondary" href="https://www.openstreetmap.org/?mlat={{restaurant.address.coord.[1]}}&amp;mlon={{restaurant.address.coord.[0]}}#map=17/{{restaurant.address.coord.[1]}}/{{restaurant.address.coord.[0]}}"
            target="_blank" rel="noopener">
                View Larger Map
            </a>
        </small>
    </div>
    
    <div class="coordinates">
        <span class="coord-label">Coordinates:</span>
        <span class="coord-value">{{restaurant.address.coord.[1]}}, {{restaurant.address.coord.[0]}}</span>
    </div>
</div>
{{/if}}