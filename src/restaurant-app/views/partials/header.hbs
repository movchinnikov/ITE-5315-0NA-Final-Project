<header class="header">
    <div class="container">
        <div class="header-content">
            <div class="header-brand">
                <h1 class="logo">NYC Restaurants Explorer</h1>
                <p class="tagline">Discover restaurants in New York City</p>
            </div>
            
            <div class="header-auth">
                <!-- Auth Section (shown when not logged in) -->
                <div id="auth-section" class="auth-section">
                    <button id="login-btn" class="btn btn-secondary">Login</button>
                    <button id="signup-btn" class="btn btn-primary">Sign Up</button>
                </div>
                
                <!-- User Section (shown when logged in) -->
                <div id="user-section" class="user-section" style="display: none;">
                    <span class="welcome-text">Welcome, <span id="username"></span></span>
                    <button id="logout-btn" class="btn btn-secondary">Logout</button>
                </div>
            </div>
        </div>
    </div>
</header>